<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/lay_10"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_weight="4"
        android:paddingLeft="@dimen/lay_10"
        android:text="@string/order_number"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_weight="4"
        android:paddingLeft="@dimen/lay_10"
        android:gravity="center"
        android:text="@string/pay_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_weight="5"
        android:paddingLeft="@dimen/lay_10"
        android:gravity="center"
        android:text="@string/order_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragment_myorder_content"
        android:layout_above="@id/activity_order_detail_price"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>