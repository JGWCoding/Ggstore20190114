<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
        android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/activity_shop_terms_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/back"
            android:layout_margin="@dimen/lay_10"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/button_bg_10"
            android:textSize="@dimen/font_25"
            android:text="@string/back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/lay_40" />
        <TextView
            android:layout_margin="@dimen/lay_10"
            android:layout_weight="3"
            android:enabled="false"
            android:id="@+id/activity_shop_terms_submit"
            android:textColor="@color/gray"
            android:background="@drawable/selector_button_bg_gray_10"
            android:textSize="@dimen/font_25"
            android:gravity="center"
            android:text="@string/go_paypal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/lay_40" />
    </LinearLayout>
    <ggstore.com.view.MyNestedScrollView
        android:layout_marginTop="@dimen/lay_20"
        android:layout_marginRight="@dimen/lay_20"
        android:layout_marginLeft="@dimen/lay_20"
        android:id="@+id/activity_shop_terms_scroll"
        android:layout_above="@id/activity_shop_terms_bottom"
        android:layout_width="match_parent"
        android:requiresFadingEdge="vertical"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="@dimen/lay_50"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/activity_shop_terms_details"
            android:textSize="@dimen/font_15"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ggstore.com.view.MyNestedScrollView>
</RelativeLayout>