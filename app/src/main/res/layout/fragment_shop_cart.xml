<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_margin="@dimen/lay_10"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/font_25"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/bg"
        android:text="@string/cancel"
        android:layout_width="@dimen/lay_150"
        android:layout_height="@dimen/lay_40" />
    <TextView
        android:id="@+id/go"
        android:layout_margin="@dimen/lay_10"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/font_25"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/bg"
        android:text="@string/go"
        android:layout_width="@dimen/lay_150"
        android:layout_height="@dimen/lay_40" />
    <TextView
        android:id="@+id/price"
        android:layout_above="@id/go"
        android:layout_marginRight="@dimen/lay_10"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/font_20"
        android:gravity="center"
        android:textColor="@color/bg"
        android:text="总计:$287"
        android:layout_width="@dimen/lay_200"
        android:layout_height="@dimen/lay_40" />
    <FrameLayout
        android:id="@+id/fragment_shopcart_content"
        android:layout_above="@id/price"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</RelativeLayout>