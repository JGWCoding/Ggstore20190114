<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/lay_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lay_15"
            android:text="@string/delivery_way"
            android:textColor="@color/bg"
            android:textSize="@dimen/font_18" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lay_5"
            android:text="@string/delivery_way_detail"
            android:textSize="@dimen/font_13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lay_10"
            android:text="@string/receiver_data"
            android:textColor="@color/bg"
            android:textSize="@dimen/font_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lay_15"
            android:text="@string/first_name"
            android:textColor="@color/bg" />

        <EditText
            android:id="@+id/activity_address_frist_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lay_40"
            android:layout_marginTop="@dimen/lay_5"
            android:background="@drawable/selector_edittext_bg_5"
            android:padding="@dimen/lay_15"
            android:textColorHint="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lay_15"
            android:text="@string/last_name"
            android:textColor="@color/bg" />

        <EditText
            android:id="@+id/activity_address_last_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lay_40"
            android:layout_marginTop="@dimen/lay_5"
            android:background="@drawable/selector_edittext_bg_5"
            android:padding="@dimen/lay_15"
            android:textColorHint="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lay_15"
            android:text="@string/phone"
            android:textColor="@color/bg" />

        <EditText
            android:id="@+id/activity_address_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lay_40"
            android:layout_marginTop="@dimen/lay_5"
            android:background="@drawable/selector_edittext_bg_5"
            android:padding="@dimen/lay_15"
            android:textColorHint="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lay_15"
            android:text="@string/area"
            android:textColor="@color/bg" />

        <TextView
            android:id="@+id/activity_address_area"
            android:layout_width="@dimen/lay_80"
            android:layout_height="@dimen/lay_40"
            android:layout_marginTop="@dimen/lay_5"
            android:background="@color/tr_gray"
            android:gravity="center"
            android:text="@string/hongkong" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lay_15"
            android:text="@string/postal_address"
            android:textColor="@color/bg" />

        <EditText
            android:id="@+id/activity_address_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lay_40"
            android:layout_marginTop="@dimen/lay_5"
            android:background="@drawable/selector_edittext_bg_5"
            android:padding="@dimen/lay_15"
            android:textColorHint="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lay_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_address_back"
                android:layout_width="@dimen/lay_140"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/lay_15"
                android:layout_weight="1"
                android:background="@drawable/button_bg_10"
                android:gravity="center"
                android:padding="@dimen/lay_5"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="@dimen/font_25" />

            <TextView
                android:id="@+id/activity_address_submit"
                android:layout_width="@dimen/lay_140"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/lay_15"
                android:layout_weight="1"
                android:background="@drawable/gray_bg"
                android:gravity="center"
                android:padding="@dimen/lay_5"
                android:text="@string/submit"
                android:textSize="@dimen/font_25" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>