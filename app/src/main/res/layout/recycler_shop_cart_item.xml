<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="@dimen/lay_5"
    android:layout_height="@dimen/lay_120">
    <LinearLayout
        android:layout_weight="4"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:padding="@dimen/lay_5"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/fragment_shopcart_item_image"
            android:src="@drawable/product"
            android:layout_width="@dimen/lay_80"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_height="0dp" />
    <TextView
        android:id="@+id/fragment_shopcart_item_cancel"
        android:layout_margin="@dimen/lay_5"
        android:padding="@dimen/lay_5"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:background="@drawable/rectangle_radius_5"
        android:textSize="@dimen/font_12"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/lay_80"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:padding="@dimen/lay_5"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_marginRight="@dimen/lay_10"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/fragment_shopcart_item_title"
            android:textSize="@dimen/font_15"
            android:text="婴儿动物玩具车 - 象"
            android:textColor="@color/bg"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/fragment_shopcart_item_title"
            android:id="@+id/detail1"
            android:layout_marginTop="@dimen/lay_2"
            android:textSize="@dimen/font_12"
            android:text=" · 安全原身设计及无污染"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/detail1"
            android:id="@+id/detail2"
            android:layout_marginTop="@dimen/lay_2"
            android:textSize="@dimen/font_12"
            android:text=" · 通过欧盟标准校验"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="@dimen/lay_5"
            android:layout_margin="@dimen/lay_5"
            android:layout_alignParentBottom="true"
            android:id="@+id/fragment_shopcart_item_del"
            android:background="@drawable/round_rectangle_bg_5"
            android:textSize="@dimen/font_12"
            android:textColor="@color/white"
            android:text="－"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="@dimen/lay_5"
            android:layout_toRightOf="@id/fragment_shopcart_item_del"
            android:layout_margin="@dimen/lay_5"
            android:layout_alignParentBottom="true"
            android:id="@+id/fragment_shopcart_item_sum"
            android:textColor="@color/bg"
            android:textSize="@dimen/font_12"
            android:text="1"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="@dimen/lay_5"
            android:layout_toRightOf="@id/fragment_shopcart_item_sum"
            android:layout_margin="@dimen/lay_5"
            android:layout_alignParentBottom="true"
            android:id="@+id/fragment_shopcart_item_add"
            android:background="@drawable/round_rectangle_bg_5"
            android:textSize="@dimen/font_12"
            android:textColor="@color/white"
            android:text="＋"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginBottom="@dimen/lay_10"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/fragment_shopcart_item_price"
            android:textColor="@color/bg"
            android:textSize="@dimen/font_12"
            android:text="HK$ 108"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>