<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/order_number_text"
        android:layout_marginTop="@dimen/lay_30"
        android:layout_marginLeft="@dimen/lay_30"
        android:textSize="@dimen/font_20"
        android:textColor="@color/bg"
        android:text="訂單編號"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_order_detail_order_number"
        android:layout_toRightOf="@id/order_number_text"
        android:layout_marginTop="@dimen/lay_30"
        android:layout_marginLeft="@dimen/lay_50"
        android:textSize="@dimen/font_20"
        android:text="PO12345678"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/order_number_text"
        android:id="@+id/payment_day_text"
        android:layout_marginTop="@dimen/lay_30"
        android:layout_marginLeft="@dimen/lay_30"
        android:textSize="@dimen/font_20"
        android:textColor="@color/bg"
        android:text="付款日期"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_order_detail_payment_day"
        android:layout_toRightOf="@id/payment_day_text"
        android:layout_below="@id/activity_order_detail_order_number"
        android:layout_marginTop="@dimen/lay_30"
        android:layout_marginLeft="@dimen/lay_50"
        android:textSize="@dimen/font_20"
        android:text="26/11/2018"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/activity_order_detail_payment_day"
        android:layout_marginTop="@dimen/lay_30"
        android:layout_marginLeft="@dimen/lay_30"
        android:textSize="@dimen/font_20"
        android:textColor="@color/bg"
        android:text="貨品"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_order_detail_name"
        android:layout_toRightOf="@id/payment_day_text"
        android:layout_below="@id/activity_order_detail_payment_day"
        android:layout_marginTop="@dimen/lay_30"
        android:layout_marginLeft="@dimen/lay_50"
        android:layout_marginRight="@dimen/lay_20"
        android:textSize="@dimen/font_20"
        android:text="嬰兒動物玩具車 - 象(編號:TEIT11-00342)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/activity_order_detail_production_img"
        android:layout_marginTop="@dimen/lay_10"
        android:layout_toRightOf="@id/order_number_text"
        android:layout_below="@id/activity_order_detail_name"
        android:layout_marginLeft="@dimen/lay_50"
        android:src="@drawable/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/activity_order_detail_production_img"
        android:layout_marginTop="@dimen/lay_30"
        android:layout_marginLeft="@dimen/lay_30"
        android:textSize="@dimen/font_20"
        android:textColor="@color/bg"
        android:text="數量"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/activity_order_detail_number"
        android:layout_toRightOf="@id/payment_day_text"
        android:layout_below="@id/activity_order_detail_production_img"
        android:layout_marginTop="@dimen/lay_30"
        android:layout_marginLeft="@dimen/lay_50"
        android:layout_marginRight="@dimen/lay_20"
        android:textSize="@dimen/font_20"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/activity_order_detail_number"
        android:layout_marginTop="@dimen/lay_30"
        android:layout_marginLeft="@dimen/lay_30"
        android:textSize="@dimen/font_20"
        android:textColor="@color/bg"
        android:text="價格"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_order_detail_price"
        android:layout_toRightOf="@id/payment_day_text"
        android:layout_below="@id/activity_order_detail_number"
        android:layout_marginTop="@dimen/lay_30"
        android:layout_marginLeft="@dimen/lay_50"
        android:layout_marginRight="@dimen/lay_20"
        android:textSize="@dimen/font_20"
        android:text="HK$180"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/activity_order_detail_price"
        android:layout_marginTop="@dimen/lay_30"
        android:layout_marginLeft="@dimen/lay_30"
        android:textSize="@dimen/font_20"
        android:textColor="@color/bg"
        android:text="訂單狀態"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_order_detail_state"
        android:layout_below="@id/activity_order_detail_price"
        android:layout_toRightOf="@id/payment_day_text"
        android:layout_marginTop="@dimen/lay_30"
        android:layout_marginLeft="@dimen/lay_50"
        android:layout_marginRight="@dimen/lay_20"
        android:textSize="@dimen/font_20"
        android:text="準備送貨"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>