<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lay_60"
        android:text="@string/app_name"
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="@dimen/font_25" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/lay_50"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:padding="@dimen/lay_15"
        android:src="@drawable/left_nav" />

    <ImageView
        android:id="@+id/bar_shop_cart"
        android:layout_width="@dimen/lay_50"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:padding="@dimen/lay_15"
        android:src="@drawable/shop_cart"
        />

    <ImageView
        android:id="@+id/bar_search"
        android:layout_marginRight="@dimen/lay_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:padding="@dimen/lay_15"
        android:src="@drawable/search"
        />
</merge>