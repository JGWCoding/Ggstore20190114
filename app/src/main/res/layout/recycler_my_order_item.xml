<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center"
    android:paddingTop="@dimen/lay_10"
    android:paddingBottom="@dimen/lay_10"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/order_number"
        android:layout_weight="3"
        android:paddingLeft="@dimen/lay_10"
        android:text="PO12345678"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_weight="4"
        android:paddingLeft="@dimen/lay_10"
        android:text="嬰兒動物玩具車 - 象 (編號:TEIT11-00342)"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:maxLines="2"
        android:ellipsize="end"
        android:drawableRight="@drawable/right_arrow"
        android:layout_weight="5"
        android:paddingRight="@dimen/lay_10"
        android:paddingLeft="@dimen/lay_10"
        android:text="@string/order_state_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>