<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:padding="@dimen/lay_1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lay_40"
        android:layout_marginTop="@dimen/lay_10"
        android:layout_marginBottom="@dimen/lay_10"
        android:background="@drawable/round_rectangle"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragment_new_product_img"
            android:layout_width="@dimen/lay_40"
            android:layout_height="@dimen/lay_30"
            android:background="@drawable/round_rectangle_bg"
            android:src="@drawable/single" />

        <ImageView
            android:id="@+id/fragment_new_product_img2"
            android:layout_width="@dimen/lay_40"
            android:layout_height="@dimen/lay_30"
            android:src="@drawable/double_icon" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_new_product_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>