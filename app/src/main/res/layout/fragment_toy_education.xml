<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/main_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabIndicatorColor="@color/white_transparent"
        app:tabSelectedTextColor="#148BA6"
        app:tabTextColor="#89C5D2">

    </android.support.design.widget.TabLayout>
    <View
        android:id="@+id/fragment_toy_education_line"
        android:background="@color/bg"
        android:layout_width="@dimen/lay_85"
        android:layout_height="@dimen/lay_2"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_new_product_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_tab" />
</LinearLayout>